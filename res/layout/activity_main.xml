<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_id_test" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/lay_main"
        android:id="@+id/lay_main_playlist"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/txt_main_title_list"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="List Title"
            android:fontFamily="@font/courgette_regular"
            android:gravity="bottom"
            android:ellipsize="end"
            android:maxLines="1"/>
        <ImageButton
            android:layout_alignParentRight="true"
            android:id="@+id/btn_main_show_list"
            android:layout_marginTop="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_baseline_menu_24"
            android:backgroundTint="@color/dark_gray"
            style="@style/Widget.AppCompat.Button.Borderless"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lay_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/img_main"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/music_thumbs"/>

        <TextView
            android:id="@+id/txt_main_title_music"
            android:layout_width="200dp"
            android:layout_height="33dp"
            android:textSize="23sp"
            android:fontFamily="@font/courgette_regular"
            android:textColor="@color/black"
            android:text="title"/>
        <TextView
            android:id="@+id/txt_main_time_end"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="00:00"
            android:fontFamily="@font/satisfy_regular"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="25dp">
            <ImageButton
                android:id="@+id/btn_main_prev_music"
                android:layout_weight="1"
                android:layout_marginRight="12.5dp"
                android:layout_marginLeft="12.5dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:backgroundTint="@color/dark_gray"
                android:background="@drawable/ic_baseline_fast_rewind_24"
                style="@style/Widget.AppCompat.Button.Borderless"/>
            <ImageButton
                android:id="@+id/btn_main_stop_music"
                android:layout_weight="1"
                android:layout_marginRight="12.5dp"
                android:layout_marginLeft="12.5dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:backgroundTint="@color/dark_gray"
                android:background="@drawable/ic_baseline_play_arrow_24"
                style="@style/Widget.AppCompat.Button.Borderless"/>
            <ImageButton
                android:id="@+id/btn_main_next_music"
                android:layout_weight="1"
                android:layout_marginRight="12.5dp"
                android:layout_marginLeft="12.5dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:backgroundTint="@color/dark_gray"
                android:background="@drawable/ic_baseline_fast_forward_24"
                style="@style/Widget.AppCompat.Button.Borderless"/>
            <ImageButton
                android:id="@+id/btn_main_cycle_music"
                android:layout_weight="1"
                android:layout_marginRight="12.5dp"
                android:layout_marginLeft="12.5dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_baseline_loop_24"
                style="@style/Widget.AppCompat.Button.Borderless"/>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/list_main"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lay_main"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>