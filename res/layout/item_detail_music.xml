<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_detail_item_music"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/txt_detail_item_title"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:text="title"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="@font/courgette_regular"
        android:textColor="@color/black"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/txt_detail_item_time"
        android:fontFamily="@font/satisfy_regular"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text="00:00"/>

    <Button
        android:id="@+id/btn_detail_item_delete"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:drawableRight="@drawable/ic_baseline_delete_24"
        style="@style/Widget.AppCompat.Button.Borderless"/>

</LinearLayout>